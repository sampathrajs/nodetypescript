{
  "name": "nodeapi",
  "version": "0.0.0",
  "description": "Sample api server",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist",
    "build": "tsc",
    "dev": "concurrently --kill-others \"npm run watch:ts\" \"npm run watch:node\"",
    "test": "tsc && mocha dist/**/*.spec.js",
    "lint": "tsc --noEmit && eslint src --ext ts --ext js --quiet --fix",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon",
    "debug": "nodemon --inspect-brk=9228",
    "prestart": "npm run build"
  },
  "author": "Sampath raj",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "envalid": "^5.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.8",
    "@types/node": "^12.6.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
